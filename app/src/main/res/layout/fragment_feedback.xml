<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="60dp"
    tools:context=".FeedbackFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Give Feedback"
            android:fontFamily="casual"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Help us help you by improving Ghumoo"
            android:textSize="16sp"
            android:textStyle="italic"
            android:fontFamily="sans-serif-light"
            android:layout_marginStart="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="How was your experience?"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"
            android:textColor="@color/black"
            android:layout_marginTop="30dp"
            android:layout_marginStart="20dp"/>

        <RatingBar
            android:id="@+id/ratingBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginStart="20dp"
            android:contentDescription="Rating of the overall experience"
            android:numStars="5"
            android:rating="4.5"
            android:stepSize="0.5"
            android:progressBackgroundTint="#F4EBCD"
            android:secondaryProgressTint="#FFBF00"
            android:progressTint="#FFBF00"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="We would love hearing from you."
            android:layout_marginStart="20dp"
            android:layout_marginTop="40dp"
            android:textSize="20sp"
            android:fontFamily="sans-serif-light"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:id="@+id/feedback"
            android:background="@drawable/border"
            android:layout_margin="20dp"
            android:textSize="20sp"
            android:padding="20dp"
            android:gravity="top"
            android:hint="Write your feedback here!!"/>

        <com.google.android.material.button.MaterialButton
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/getFeedback"
            android:text="Submit response"
            android:layout_gravity="bottom"
            android:backgroundTint="#A13DD143"
            android:layout_marginStart="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginEnd="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="italic"
            android:text="Your response will be posted on Google Play Store"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"/>
    </LinearLayout>

</FrameLayout>